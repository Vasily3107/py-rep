from tkinter import *

w = Tk()

w.geometry("400x300")

l = Label(text = "Waiting for a click")
l.pack()

from random import randint
def set_rand_num():
    global l
    n = randint(-(2**31), 2**31)
    l.configure(text = f"{n:,}")

b = Button(text = "Generater random number", command = set_rand_num)
b.pack()

w.mainloop()
